{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES6",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react",
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noFallthroughCasesInSwitch": true,
    "module": "umd",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
